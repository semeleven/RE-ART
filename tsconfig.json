{
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core",
    "useCache": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Styled": ["src/universal/lib/styled/index.ts"],
      "@Styled/*": ["src/universal/lib/styled/*"],
      "@Redux/*": ["src/universal/lib/redux/*"],
      "@GraphQL/*": ["src/universal/lib/graphql/*"],
      "@Components": ["src/universal/components/index.ts"],
      "@Containers": ["src/universal/containers/index.ts"],
      "@API/*" : ["src/server/api/*"]
    },
    "module": "es2015",
    "target": "es2015",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": false,
    "jsx": "react",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist", "./build"]
}